#!/usr/bin/env bash
# This script lists all non-hidden files in the current directory,
# showing the part after the first dash if it exists, or the full name otherwise

for file in *; do
  # Ensure it's a regular file or directory (not hidden)
  if [[ $file == *-* ]]; then
    if [[ "$file" == *-* ]]; then
      echo "${file#*-}"
    else
      echo "$file"
    fi
  fi
done
